<template>
  <div id="app">
    <h1>{{title}}</h1>
    <h2>Form User</h2>
    <form>
        <label >Name:</label><br>
    
       <input v-model="name" placeholder="" class="input"><br>
 <label >Password:</label><br>
    
       <input v-model="password" placeholder="" class="input" type="password"><br>
       <label >Email:</label><br>
    
       <input v-model="email" placeholder="" class="input"><br>
      <button >Submit</button>
     
    </form>
   
  </div>
</template>

<script>
export default {
  data() {
    return {
      title: 'Task 1: Using V-model for handling user inputs',
      name:'zheng',
      password:'123456',
       email:'zheng@google.com',
       checkbox:[],
      selected:''
    };
  },
  methods: {
    
  }
};
</script>

