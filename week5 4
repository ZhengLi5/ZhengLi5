<!-- Use preprocessors via the lang attribute! e.g. <template lang="pug"> -->
<template>
  <div id="app">
    <h1>{{ title }}</h1>
    <number-form v-on:getNumber="getNumber">
      Num:
    </number-form>
    <p>Num's value is {{ xValue }}</p>
    <keep-alive>
     <component2 v-bind:num="8848"></component2>
     </keep-alive>
  </div>
</template>

<script>
Vue.component("numberForm", {
  data: function () {
    return {
      number: 0
    };
  },
  template:
    '<div> <slot></slot><input v-model="number" placeholder="number" class="input"><button  v-on:click="$emit(\'getNumber\',number)">create</button><br/></div>'
});

Vue.component("component2", {
  props: {
    num: Number,
   
  },
  data: function () {
    return {
      number: 0,
      flag:true,
      text:'invsible'
    };
  },
  methods: {
    changeFlag: function (event) {
      this.flag=!this.flag;
      if(this.flag==true)
      {
        this.text='visible';
      }else{
        this.text='invisible';
      };
      console.log(this.text);
     }
  },
  template: '<div ><span v-if="this.flag">{{num}}</span><button  v-on:click="changeFlag">{{this.text}}</button></div>'
});
  
  

export default {
  data() {
    return {
      xValue: "",
      title: "Task 4 â€“Learn Components In-Depth (30 minutes)"
    };
  },
  methods: {
    getNumber: function (xx) {
      this.xValue = xx;
    }
  }
};
</script>

